{
  "compilerOptions": {
    "target": "es2016",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,                                 /* Skip type checking all .d.ts files. */
    "outDir": "./dist",
    "moduleResolution": "node",
    "baseUrl": "./src",
  },
  "include": [
    "./**/*"
  ],
  "exclude": [
    "node_modules",
    "./dist/**/*"
  ]
}